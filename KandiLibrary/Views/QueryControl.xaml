<UserControl x:Class="KandiLibrary.Views.QueryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KandiLibrary.Views" 
             xmlns:sys="clr-namespace:System;assembly=netstandard"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="220">
    <Grid HorizontalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="txtQuery" Height="25" Width="100" Margin="5" HorizontalAlignment="Center" />
        <ComboBox Grid.Column="1" x:Name="cmbQueryOption" Margin="5" Width="125" Height="25" HorizontalAlignment="Center"/>

    </Grid>
</UserControl>
